<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- ============================ TurianBase ========================== -->
  <PawnKindDef Name="TurianBase" Abstract="True">
    <defaultFactionType>TurianFaction</defaultFactionType>
    <race>AlienTurian</race>
    <chemicalAddictionChance>0.10</chemicalAddictionChance>
    <baseRecruitDifficulty>0.90</baseRecruitDifficulty>
    <initialWillRange>3~7</initialWillRange>
    <initialResistanceRange>15~23</initialResistanceRange>
    <backstoryCategories>
      <li>TurianBackstory</li>
    </backstoryCategories>
  </PawnKindDef>
  <!-- ============================ Poor Turians ========================== -->
  <PawnKindDef Name="TurianPoorBase" ParentName="TurianBase" Abstract="True">
    <combatPower>30</combatPower>
    <race>AlienTurian</race>
    <initialWillRange>2~6</initialWillRange>
    <initialResistanceRange>12~17</initialResistanceRange>
    <itemQuality>Poor</itemQuality>
    <isFighter>false</isFighter>
    <gearHealthRange>
      <min>0.2</min>
      <max>2.0</max>
    </gearHealthRange>
    <apparelMoney>
      <min>150</min>
      <max>300</max>
    </apparelMoney>
    <apparelAllowHeadgearChance>0.3</apparelAllowHeadgearChance>
    <apparelTags>
      <li>Neolithic</li>
    </apparelTags>
    <weaponMoney>
      <min>150</min>
      <max>180</max>
    </weaponMoney>
    <weaponTags>
      <li>MedievalMeleeBasic</li>
    </weaponTags>
    <invNutrition>1.0</invNutrition>
    <inventoryOptions>
      <skipChance>0.75</skipChance>
      <subOptionsChooseOne>
        <li>
          <choiceChance>50</choiceChance>
          <thingDef>Silver</thingDef>
          <countRange>
            <min>25</min>
            <max>70</max>
          </countRange>
        </li>
      </subOptionsChooseOne>
    </inventoryOptions>
  </PawnKindDef>
  <PawnKindDef ParentName="TurianPoorBase">
    <defName>TurianSlave01</defName>
    <label>slave</label>
  </PawnKindDef>
