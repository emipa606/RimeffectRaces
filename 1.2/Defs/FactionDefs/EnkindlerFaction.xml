<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef>
    <defName>EnkindlerFaction</defName>
    <label>Enkindler's legacy</label>
    <description>A detachment of the Enkindler's legacy faith originated from the Hanar and Drell homeworlds.</description>
    <pawnsPlural>disciples</pawnsPlural>
    <fixedName>Enkindler's legacy</fixedName>
    <settlementGenerationWeight>0.02</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <factionIconPath>World/WorldObjects/EnkindlerFlag01</factionIconPath>
    <settlementTexturePath>World/WorldObjects/EnkindlerFlag01</settlementTexturePath>
    <canMakeRandomly>true</canMakeRandomly>
    <canStageAttacks>false</canStageAttacks>
    <canSiege>false</canSiege>
    <!--<factionNameMaker>NamerFaction</factionNameMaker>-->
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <techLevel>Spacer</techLevel>
    <backstoryCategories>
      <li>HanarBackstory</li>
    </backstoryCategories>
    <hairTags>
      <li>HanarHair</li>
    </hairTags>
    <startingGoodwill>
      <min>0</min>
      <max>69</max>
    </startingGoodwill>
    <naturalColonyGoodwill>
      <min>0</min>
      <max>69</max>
    </naturalColonyGoodwill>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <colorSpectrum>
      <li>(0.000, 0.749, 1.000)</li>
      <li>(1.000, 0.647, 0.000)</li>
      <li>(0.498, 1.000, 0.831)</li>
      <li>(0.914, 0.588, 0.478)</li>
      <li>(0.235, 0.702, 0.443)</li>
      <li>(1.000, 0.388, 0.278)</li>
      <li>(0.576, 0.439, 0.859)</li>
      <li>(0.855, 0.439, 0.839)</li>
    </colorSpectrum>
    <mustStartOneEnemy>false</mustStartOneEnemy>
    <leaderTitle>Beacon</leaderTitle>
    <allowedArrivalTemperatureRange>
      <min>5</min>
      <max>40</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,50)</li>
        <li>(50, 50)</li>
        <li>(1000, 1000)</li>
        <li>(10000, 10000)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <HanarColonist01>30</HanarColonist01>
          <DrellColonist01>30</DrellColonist01>
          <DrellSoldier01>60</DrellSoldier01>
          <DrellVeteran01>35</DrellVeteran01>
          <DrellGrenadier01>15</DrellGrenadier01>
          <DrellElite01>25</DrellElite01>
          <HanarBeacon01>1</HanarBeacon01>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <HanarTrader01>1</HanarTrader01>
        </traders>
        <carriers>
          <Muffalo>6</Muffalo>
          <Dromedary>5</Dromedary>
          <Alpaca>2</Alpaca>
          <Elephant>1</Elephant>
        </carriers>
        <guards>
          <HanarColonist01>50</HanarColonist01>
          <DrellColonist01>70</DrellColonist01>
          <DrellSoldier01>60</DrellSoldier01>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <HanarColonist01>20</HanarColonist01>
          <DrellColonist01>20</DrellColonist01>
          <DrellSoldier01>60</DrellSoldier01>
          <DrellVeteran01>25</DrellVeteran01>
          <DrellElite01>10</DrellElite01>
          <HanarBeacon01>1</HanarBeacon01>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <maxTotalPoints>300</maxTotalPoints>
        <options>
          <HanarColonist01>20</HanarColonist01>
          <DrellColonist01>20</DrellColonist01>
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>
</Defs>