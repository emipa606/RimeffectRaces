<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <HediffGiverSetDef>
    <defName>OrganicAgeless</defName>
    <hediffGivers>
      <!-- Environmental -->
      <li Class="HediffGiver_Bleeding">
        <hediff>BloodLoss</hediff>
      </li>
      <li Class="HediffGiver_Hypothermia">
        <hediff>Hypothermia</hediff>
      </li>
      <li Class="HediffGiver_Heat">
        <hediff>Heatstroke</hediff>
      </li>
      <!-- Responsive and special -->
      <li Class="HediffGiver_BrainInjury">
        <hediff>TraumaSavant</hediff>
        <partsToAffect>
          <li>Brain</li>
        </partsToAffect>
        <chancePerDamagePct>0.12</chancePerDamagePct>
        <letterLabel>Trauma savant</letterLabel>
        <letter>[PAWN_nameDef]'s brain injury has caused [PAWN_pronoun] to develop strange savant-like abilities.</letter>
      </li>
    </hediffGivers>
  </HediffGiverSetDef>
  <HediffGiverSetDef>
    <defName>KroganHediffs</defName>
    <hediffGivers>
      <li Class="YORHG.YourOwnRace_HediffGiver">
        <hediff>KroganPain</hediff>
        <TriggeredOnIntervalPassed>false</TriggeredOnIntervalPassed>
      </li>
      <li Class="RimeffectRaces.BloodRageGiver">
        <hediff>BloodRage</hediff>
      </li>
    </hediffGivers>
  </HediffGiverSetDef>
  <HediffGiverSetDef>
    <defName>VorchaHediffs</defName>
    <hediffGivers>
      <li Class="YORHG.YourOwnRace_HediffGiver">
        <hediff>VorchaPain</hediff>
        <TriggeredOnIntervalPassed>false</TriggeredOnIntervalPassed>
      </li>
    </hediffGivers>
  </HediffGiverSetDef>
  <HediffGiverSetDef>
    <defName>HanarHediffs</defName>
    <hediffGivers>
      <li Class="HediffGiver_Bleeding">
        <hediff>BloodLoss</hediff>
      </li>
      <li Class="HediffGiver_Hypothermia">
        <hediff>Hypothermia</hediff>
      </li>
      <li Class="HediffGiver_Heat">
        <hediff>Heatstroke</hediff>
      </li>
      <li Class="HediffGiver_Birthday">
        <hediff>Carcinoma</hediff>
        <canAffectAnyLivePart>true</canAffectAnyLivePart>
        <ageFractionChanceCurve>
          <points>
            <li>(0.28, 0)</li>
            <li>(1, 0.0011)</li>
            <li>(1.5, 0.0015)</li>
          </points>
        </ageFractionChanceCurve>
        <averageSeverityPerDayBeforeGeneration>0.0005</averageSeverityPerDayBeforeGeneration>
      </li>
      <li Class="HediffGiver_Birthday">
        <hediff>Frail</hediff>
        <partsToAffect>
          <li>HanarUnderhead</li>
        </partsToAffect>
        <ageFractionChanceCurve>
          <points>
            <li>(0.625, 0)</li>
            <li>(0.75, 0.01395)</li>
            <li>(0.875, 0.02604)</li>
          </points>
        </ageFractionChanceCurve>
      </li>
      <li Class="YORHG.YourOwnRace_HediffGiver">
        <hediff>HanarBiology</hediff>
        <TriggeredOnIntervalPassed>false</TriggeredOnIntervalPassed>
      </li>
    </hediffGivers>
  </HediffGiverSetDef>
  <HediffGiverSetDef>
    <defName>ReaperHediffs</defName>
    <hediffGivers>
      <li Class="HediffGiver_Bleeding">
        <hediff>BloodLoss</hediff>
      </li>
      <li Class="YORHG.YourOwnRace_HediffGiver">
        <hediff>ReaperPain</hediff>
        <TriggeredOnIntervalPassed>false</TriggeredOnIntervalPassed>
      </li>
    </hediffGivers>
  </HediffGiverSetDef>
  <HediffGiverSetDef>
    <defName>GethHediffsRER</defName>
    <hediffGivers>
      <li Class="YORHG.YourOwnRace_HediffGiver">
        <hediff>GethPain</hediff>
        <TriggeredOnIntervalPassed>false</TriggeredOnIntervalPassed>
      </li>
    </hediffGivers>
  </HediffGiverSetDef>
</Defs>