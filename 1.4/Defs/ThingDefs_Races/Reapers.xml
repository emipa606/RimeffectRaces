  <!-- Husk -->
  <ThingDef ParentName="BaseReaper">
    <defName>ReaperHusk</defName>
    <label>husk</label>
    <description>Husks are synthetic-organic creatures created from the bodies of humans through reaper assimilation.</description>
    <statBases>
      <MoveSpeed>3.8</MoveSpeed>
      <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.2</ArmorRating_Sharp>
    </statBases>
    <tools>
      <li>
        <label>left fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HuskLeftHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>EMP</def>
              <amount>50</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>right fist</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>6</power>
        <cooldownTime>2</cooldownTime>
        <linkedBodyPartsGroup>HuskRightHand</linkedBodyPartsGroup>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>EMP</def>
              <amount>50</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
      <li>
        <label>head</label>
        <capacities>
          <li>ToxicBite</li>
        </capacities>
        <power>10</power>
        <cooldownTime>3</cooldownTime>
        <linkedBodyPartsGroup>HuskJaw</linkedBodyPartsGroup>
        <chanceFactor>0.5</chanceFactor>
        <surpriseAttack>
          <extraMeleeDamages>
            <li>
              <def>Stun</def>
              <amount>10</amount>
            </li>
          </extraMeleeDamages>
        </surpriseAttack>
      </li>
    </tools>
    <race>
      <intelligence>ToolUser</intelligence>
      <thinkTreeMain>Mechanoid</thinkTreeMain>
      <body>ReaperHusk</body>
      <baseHealthScale>1.0</baseHealthScale>
      <lifeStageAges>
        <li>
          <def>ReaperMutant</def>
          <minAge>1</minAge>
        </li>
      </lifeStageAges>
      <hediffGiverSets>
        <li>ReaperHediffs</li>
      </hediffGiverSets>
      <soundMeleeHitPawn>Pawn_Melee_Punch_HitPawn</soundMeleeHitPawn>
      <soundMeleeHitBuilding>Pawn_Melee_Punch_HitBuilding</soundMeleeHitBuilding>
      <soundMeleeMiss>Pawn_Melee_Punch_Miss</soundMeleeMiss>
    </race>
    <butcherProducts>
      <Plasteel>2</Plasteel>
    </butcherProducts>
  </ThingDef>
  <PawnKindDef ParentName="BaseReaperKind">
    <defName>ReaperHusk</defName>
    <label>husk</label>
    <race>ReaperHusk</race>
    <combatPower>70</combatPower>
