<Defs>
  <!-- CannibalRifle -->
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_Cannibal</defName>
    <label>cannibal rifle shot</label>
    <graphicData>
      <texPath>Projectile/Bullet_Red</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>7</damageAmountBase>
      <speed>250</speed>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseGunWithQuality">
    <defName>Gun_CannibalRifle</defName>
    <label>cannibal rifle</label>
    <description>A micro-scaled mass accelerator rifle used by the cannibal mutants.</description>
    <graphicData>
      <texPath>Weapons/CannibalRifle</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>0.9</drawSize>
    </graphicData>
    <statBases>
      <MarketValue>1000</MarketValue>
      <Mass>15</Mass>
      <AccuracyTouch>0.40</AccuracyTouch>
      <AccuracyShort>0.40</AccuracyShort>
      <AccuracyMedium>0.30</AccuracyMedium>
      <AccuracyLong>0.20</AccuracyLong>
      <RangedWeapon_Cooldown>1</RangedWeapon_Cooldown>
    </statBases>
    <techLevel>Spacer</techLevel>
    <relicChance>0</relicChance>
    <destroyOnDrop>true</destroyOnDrop>
    <tradeability>None</tradeability>
    <costList>
      <ComponentSpacer>1000</ComponentSpacer>
    </costList>
    <weaponTags>
      <li>CannibalRifle</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_Cannibal</defaultProjectile>
        <warmupTime>1.65</warmupTime>
        <range>25</range>
        <ticksBetweenBurstShots>5</ticksBetweenBurstShots>
        <burstShotCount>6</burstShotCount>
        <soundCast>CannibalArmCannon</soundCast>
        <muzzleFlashScale>4</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>10</power>
        <cooldownTime>2.5</cooldownTime>
      </li>
    </tools>
  </ThingDef>
