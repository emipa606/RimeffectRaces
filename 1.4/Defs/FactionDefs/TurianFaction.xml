<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef ParentName="FactionBase">
    <defName>TurianFaction</defName>
    <label>Turian Militants</label>
    <description>The turians created a military installation on this planet a time ago to keep watch over the activities around this sector. After a while this sector has become quiet and the outpost was forgotten about. Some turians left for their homeworlds, but most remained and settled in.</description>
    <pawnsPlural>Turian</pawnsPlural>
    <fixedName>Turian Militants</fixedName>
    <allowedCultures>
      <li>TurianCulture</li>
    </allowedCultures>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <configurationListOrderPriority>10</configurationListOrderPriority>
    <factionIconPath>World/WorldObjects/TurianFlag01</factionIconPath>
    <settlementTexturePath>World/WorldObjects/TurianFlag01</settlementTexturePath>
    <canMakeRandomly>true</canMakeRandomly>
    <canStageAttacks>true</canStageAttacks>
    <canSiege>true</canSiege>
    <disallowedMemes>
      <li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
      <li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
    </disallowedMemes>
    <!--<factionNameMaker>NamerFaction</factionNameMaker>-->
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <techLevel>Spacer</techLevel>
    <backstoryCategories>
      <li>TurianBackstory</li>
    </backstoryCategories>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <colorSpectrum>
      <li>(1.000, 0.627, 0.478)</li>
      <li>(1.000, 0.714, 0.757)</li>
      <li>(1.000, 0.937, 0.835)</li>
      <li>(0.416, 0.353, 0.804)</li>
      <li>(0.565, 0.933, 0.565)</li>
      <li>(0.957, 0.643, 0.376)</li>
      <li>(1.000, 0.647, 0.000)</li>
      <li>(0.741, 0.718, 0.420)</li>
      <li>(0.251, 0.878, 0.816)</li>
      <li>(0.753, 0.753, 0.753)</li>
      <li>(0.255, 0.412, 0.882)</li>
      <li>(0.596, 0.984, 0.596)</li>
      <li>(0.196, 0.804, 0.196)</li>
      <li>(0.576, 0.439, 0.859)</li>
      <li>(0.855, 0.439, 0.839)</li>
      <li>(0.914, 0.588, 0.478)</li>
      <li>(0.859, 0.439, 0.576)</li>
      <li>(0.686, 0.933, 0.933)</li>
      <li>(0.498, 1.000, 0.831)</li>
    </colorSpectrum>
    <mustStartOneEnemy>false</mustStartOneEnemy>
    <leaderTitle>General</leaderTitle>
    <allowedArrivalTemperatureRange>
      <min>-15</min>
      <max>40</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,50)</li>
        <li>(50, 50)</li>
        <li>(1000, 1000)</li>
        <li>(10000, 10000)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <TurianColonist01>30</TurianColonist01>
          <TurianSoldier01>60</TurianSoldier01>
          <TurianVeteran01>35</TurianVeteran01>
          <TurianElite01>25</TurianElite01>
          <TurianGeneral01>1</TurianGeneral01>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <TurianTrader01>1</TurianTrader01>
        </traders>
        <carriers>
          <Muffalo>4</Muffalo>
          <Elephant>4</Elephant>
          <Dromedary>4</Dromedary>
        </carriers>
        <guards>
          <TurianColonist01>90</TurianColonist01>
          <TurianSoldier01>60</TurianSoldier01>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <TurianSoldier01>60</TurianSoldier01>
          <TurianVeteran01>25</TurianVeteran01>
          <TurianColonist01>50</TurianColonist01>
          <TurianElite01>10</TurianElite01>
          <TurianGeneral01>1</TurianGeneral01>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <maxTotalPoints>300</maxTotalPoints>
        <options>
          <TurianColonist01>50</TurianColonist01>
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>
</Defs>